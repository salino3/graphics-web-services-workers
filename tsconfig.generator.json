{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./temp-scripts-dist",
    "isolatedModules": true
  },
  "files": [
    // Use 'files' to explicitly list only the generator script
    "src/store/data/large-data-generator.ts"
  ],
  "exclude": [
    // Explicitly exclude everything else, just in case
    "node_modules",
    "dist",
    "src/**/*",
    "!src/store/data/large-data-generator.ts"
  ]
}
